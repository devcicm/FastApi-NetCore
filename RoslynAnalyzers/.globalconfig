# FastApi NetCore - Global Analyzer Configuration
# Esta configuraci√≥n aplica a todos los analizadores Roslyn del proyecto

is_global = true

# ===================================
# üîê GLOBAL POLICY ANALYZERS
# ===================================

# FAPI001: Conflicto de atributos [Authorize] - ERROR cr√≠tico de seguridad
dotnet_diagnostic.FAPI001.severity = error

# FAPI002: Conflicto de atributos [RateLimit] - ERROR cr√≠tico de seguridad  
dotnet_diagnostic.FAPI002.severity = error

# FAPI003: Conflicto de atributos [IpRange] - ERROR cr√≠tico de seguridad
dotnet_diagnostic.FAPI003.severity = error

# FAPI004: Informaci√≥n sobre pol√≠ticas globales - INFO habilitado
dotnet_diagnostic.FAPI004.severity = suggestion

# ===================================
# üöÄ FUTURE PERFORMANCE ANALYZERS
# ===================================

# FAPI100: Orden de middleware - WARNING de rendimiento
dotnet_diagnostic.FAPI100.severity = warning

# ===================================
# üèóÔ∏è FUTURE ARCHITECTURE ANALYZERS  
# ===================================

# FAPI200: Violaci√≥n de capas - ERROR de arquitectura
dotnet_diagnostic.FAPI200.severity = error

# ===================================
# üìù ANALYZER BEHAVIOR CONFIGURATION
# ===================================

# Solo analizar archivos en carpetas espec√≠ficas
dotnet_analyzer.location_kind = source_file

# Excluir archivos generados autom√°ticamente
generated_code = ignore

# ===================================
# üìã HANDLER-SPECIFIC RULES
# ===================================

# Solo aplicar reglas FAPI001-FAPI003 a archivos en carpeta Handlers/
[Handlers/**.cs]
dotnet_diagnostic.FAPI001.severity = error
dotnet_diagnostic.FAPI002.severity = error  
dotnet_diagnostic.FAPI003.severity = error
dotnet_diagnostic.FAPI004.severity = suggestion

# En otras carpetas, solo mostrar como informaci√≥n
[Core/**.cs]
dotnet_diagnostic.FAPI001.severity = none
dotnet_diagnostic.FAPI002.severity = none
dotnet_diagnostic.FAPI003.severity = none
dotnet_diagnostic.FAPI004.severity = none

[Features/**.cs]
